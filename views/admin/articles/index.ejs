<%- include ('../../partials/header.ejs') %> <%- include
('../../partials/navbar.ejs') %>

<div class="container">
  <br />
  <h2>Artigos</h2>
  <a href="/admin/articles/new" class="btn btn-success">Criar nova artigo</a>
  <hr />
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Título</th>
        <th>Slug</th>
        <th>Categoria</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% articles.forEach(article => { %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.slug %></td>
        <td><%= article.category.title %></td>
        <td>Ações</td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include ('../../partials/footer.ejs') %>

<script>
  function confirmarDelecao(event, form) {
    event.preventDefault();
    var decision = confirm("Você quer deletar essa categoria?");
    if (decision) {
      form.submit();
    }
  }
</script>
